<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_large">

    <TextView
        android:id="@+id/lbl_school_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_large"
        android:text="School Name"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lbl_dbn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_large"
        android:text="test123"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintBottom_toTopOf="@id/show_details_button"
        app:layout_constraintTop_toBottomOf="@id/lbl_school_name" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/show_details_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:text="@string/show_details"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintTop_toBottomOf="@id/lbl_dbn" />

</androidx.constraintlayout.widget.ConstraintLayout>

